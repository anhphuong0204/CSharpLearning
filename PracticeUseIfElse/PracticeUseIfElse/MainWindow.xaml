<Window x:Class="PracticeUseIfElse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticeUseIfElse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="290*"/>
            <RowDefinition Height="129*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="enableCheckBox" Content="Allow to change" Grid.Column="1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Height="16" Width="132"/>
        <Button x:Name="changeText" Content="Change text of checked" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="150" Click="changeText_Click"/>
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Center" Margin="0" Grid.Row="1" TextWrapping="Wrap" Text="Press the button to change my text" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="40"/>

    </Grid>
</Window>
